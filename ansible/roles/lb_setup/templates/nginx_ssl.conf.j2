# roles/lb_setup/templates/nginx_ssl.conf.j2

# Zulip 백엔드 서버들을 묶는 Upstream 그룹 정의
upstream zulip_cluster {
{% for server in zulip_backends %}
    server {{ server }}:80; # Zulip 서버들이 80번 포트로 서비스한다고 가정
{% endfor %}
}

# HTTP to HTTPS Redirect
server {
    listen 80;
    server_name {{ lb_common_name }};

    location / {
        return 301 https://$host$request_uri;
    }
}

# HTTPS Server Block (Reverse Proxy)
server {
    listen 443 ssl;
    server_name {{ lb_common_name }};

    # WAF 연동 설정
    modsecurity on;
    modsecurity_rules_file /etc/nginx/modsecurity.conf;

    # SSL Configuration
    ssl_certificate {{ ssl_cert_path }};
    ssl_certificate_key {{ ssl_key_path }};
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    
    # Zulip Proxy Settings
    location / {
        proxy_pass http://zulip_cluster; 
        
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Zulip requires these
        proxy_buffering off;
        proxy_http_version 1.1;
        proxy_request_buffering off;
        proxy_redirect off;
    }
}
